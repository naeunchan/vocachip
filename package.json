{
    "name": "vocationary",
    "version": "1.0.0",
    "main": "index.ts",
    "scripts": {
        "start": "expo start",
        "android": "expo run:android",
        "ios": "expo run:ios",
        "web": "expo start --web",
        "test": "jest",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write .",
        "ci:build": "npx expo export --platform web --non-interactive --output-dir dist-web",
        "prepare": "husky"
    },
    "dependencies": {
        "@react-navigation/bottom-tabs": "^7.8.8",
        "@react-navigation/native": "^7.1.22",
        "@react-navigation/native-stack": "^7.8.2",
        "expo": "~54.0.25",
        "expo-application": "~7.0.7",
        "expo-asset": "~12.0.10",
        "expo-audio": "~1.0.15",
        "expo-constants": "~18.0.10",
        "expo-crypto": "^15.0.7",
        "expo-device": "~8.0.9",
        "expo-document-picker": "~14.0.7",
        "expo-file-system": "~19.0.19",
        "expo-local-authentication": "~17.0.7",
        "expo-secure-store": "~15.0.7",
        "expo-sharing": "~14.0.7",
        "expo-sqlite": "~16.0.9",
        "expo-status-bar": "~3.0.8",
        "npm-check-updates": "^19.1.2",
        "openai": "^6.9.1",
        "quick-lru": "^7.3.0",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-native": "0.81.5",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-safe-area-context": "~5.6.2",
        "react-native-screens": "~4.16.0",
        "react-native-web": "^0.21.2",
        "sentry-expo": "~7.0.0",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/eslintrc": "^3.3.3",
        "@testing-library/react-native": "^13.3.3",
        "@types/jest": "29.5.14",
        "@types/react": "~19.1.10",
        "babel-plugin-module-resolver": "^5.0.2",
        "babel-preset-expo": "^54.0.7",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-config-universe": "^15.0.3",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "jest": "~29.7.0",
        "jest-expo": "^54.0.13",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.3",
        "react-native-dotenv": "^3.4.11",
        "react-test-renderer": "19.1.0",
        "typescript": "~5.9.3"
    },
    "jest": {
        "preset": "react-native",
        "setupFiles": [
            "<rootDir>/jest.setup-env.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.ts"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(@react-native|react-native|@react-navigation|expo|@expo|@testing-library|@react-native-community)/)"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.ts?(x)"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "private": true,
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml}": [
            "prettier --write"
        ]
    },
    "overrides": {
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-test-renderer": "19.1.0",
        "sentry-expo": {
            "react": "19.1.0"
        },
        "@sentry/react-native": {
            "react": "19.1.0"
        }
    }
}
