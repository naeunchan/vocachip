{
    "name": "vocationary",
    "version": "1.0.0",
    "main": "index.ts",
    "scripts": {
        "start": "expo start",
        "android": "expo run:android",
        "ios": "expo run:ios",
        "web": "expo start --web",
        "test": "jest",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "lint:pre-commit": "eslint . --ext .js,.jsx,.ts,.tsx --fix --max-warnings=1000",
        "format": "prettier --write .",
        "ci:build": "npx expo export --platform web --non-interactive --output-dir dist-web",
        "proxy": "node server/index.js",
        "prepare": "husky || true"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "@react-native-async-storage/async-storage": "^2.2.0",
        "@react-navigation/bottom-tabs": "^7.8.12",
        "@react-navigation/native": "^7.1.25",
        "@react-navigation/native-stack": "^7.8.6",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^17.2.3",
        "expo": "~54.0.28",
        "expo-application": "~7.0.8",
        "expo-asset": "~12.0.11",
        "expo-audio": "~1.1.0",
        "expo-constants": "~18.0.11",
        "expo-crypto": "^15.0.8",
        "expo-device": "~8.0.10",
        "expo-document-picker": "~14.0.8",
        "expo-file-system": "~19.0.20",
        "expo-font": "^14.0.11",
        "expo-local-authentication": "~17.0.8",
        "expo-secure-store": "~15.0.8",
        "expo-sharing": "~14.0.8",
        "expo-sqlite": "~16.0.10",
        "expo-status-bar": "~3.0.9",
        "express": "^5.2.1",
        "npm-check-updates": "^19.2.0",
        "openai": "^6.10.0",
        "quick-lru": "^7.3.0",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-hook-form": "^7.71.1",
        "react-native": "0.81.5",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-safe-area-context": "~5.6.2",
        "react-native-screens": "~4.16.0",
        "react-native-web": "^0.21.2",
        "sentry-expo": "~7.0.0",
        "tslib": "^2.8.1",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@eslint/eslintrc": "^3.3.3",
        "@testing-library/react-native": "^13.3.3",
        "@types/jest": "30.0.0",
        "@types/react": "~19.2.7",
        "babel-plugin-module-resolver": "^5.0.2",
        "babel-preset-expo": "^54.0.8",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-config-universe": "^15.0.3",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "husky": "^9.1.7",
        "jest": "~30.2.0",
        "jest-expo": "^54.0.15",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "react-native-dotenv": "^3.4.11",
        "react-test-renderer": "^19.1.0",
        "typescript": "~5.9.3"
    },
    "jest": {
        "preset": "react-native",
        "setupFiles": [
            "<rootDir>/jest.setup-env.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.ts"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(@react-native|react-native|@react-navigation|expo|@expo|@testing-library|@react-native-community)/)"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.ts?(x)"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "^react-native-dotenv$": "<rootDir>/__mocks__/react-native-dotenv.js"
        }
    },
    "private": true,
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml}": [
            "prettier --write"
        ]
    },
    "resolutions": {
        "tslib": "2.8.1"
    }
}
